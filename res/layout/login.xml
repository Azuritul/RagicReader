<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#FFFFFF">

    <RelativeLayout android:id="@+id/logo_panel"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#121212"
                    android:layout_alignParentTop="true"
                    android:layout_weight="1"
                    android:layout_marginBottom="20dip"
                    android:padding="6dp">

        <ImageView android:id="@+id/login_logo"
                   android:src="@drawable/login_logo"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:paddingTop="4dp"
                   android:layout_marginLeft="2dip"
                   android:layout_marginBottom="10dip"
                   android:layout_alignParentLeft="true"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/username_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo_panel"
        android:text="Username(Your email):"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="8dip"/>


    <EditText android:id="@+id/username"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_below="@id/username_text"
              android:layout_marginLeft="8dip"
              android:layout_marginRight="8dip"
              android:layout_marginTop="2dip"
              android:singleLine="true"/>

    <TextView
        android:id="@+id/password_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Password:"
        android:textSize="16sp"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="8dip"
        android:layout_below="@id/username"
        android:textColor="#000000"/>

    <EditText android:id="@+id/password"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_below="@id/password_text"
              android:singleLine="true"
              android:password="true"
              android:layout_marginLeft="8dip"
              android:layout_marginRight="8dip"
              android:layout_marginTop="2dip"/>

    <TextView
        android:id="@+id/account_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Account:"
        android:textSize="16sp"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="8dip"
        android:layout_below="@id/password"
        android:textColor="#000000"/>

    <EditText android:id="@+id/account"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_below="@id/account_text"
              android:singleLine="true"
              android:layout_marginLeft="8dip"
              android:layout_marginRight="8dip"
              android:layout_marginTop="2dip"/>

    <Button
        android:id="@+id/login"
        android:layout_width="64dip"
        android:layout_height="48dip"
        android:layout_below="@id/account"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5sp"
        android:text="Login"
        android:layout_weight="1"
        android:textSize="14sp"
        android:layout_marginRight="8dip"/>


</RelativeLayout>